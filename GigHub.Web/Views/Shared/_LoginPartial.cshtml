@using Microsoft.AspNetCore.Identity
@using GigHub.Web.Core.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="notifications">
                <a href="#">
                    <i class="glyphicon glyphicon-globe"></i>
                </a>
                <span class="badge js-notifications-count hide"></span>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    @UserManager.GetUserName(User) <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><a asp-controller="Gigs" asp-action="Mine">My Upcoming Gigs</a></li>
                    <li><a asp-controller="Gigs" asp-action="Attending">Gigs I'm Going</a></li>
                    <li><a asp-controller="Followees" asp-action="Index">Artists I'm Following</a></li>
                    <li role="separator" class="divider"></li>
                    <li>
                        <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                    </li>
                </ul>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
